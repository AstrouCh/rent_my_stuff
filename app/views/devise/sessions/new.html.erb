<div class="d-flex bg-warning p-3 rounded-sm shadow flex-column col-md-3 mx-auto my-5">
  <h2>Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs px-4">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions px-4">
      <%= f.button :submit, "Log in", class:"btn-outline-warning" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
