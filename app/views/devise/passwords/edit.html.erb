<div class="d-flex bg-warning bg-opacity-25 p-3 rounded-sm shadow flex-column col-md-3 mx-auto my-5">
  <h2>Change your password</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password,
                  label: "New password",
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirm your new password",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="d-flex flex-column text-center form-actions px-4">
      <%= f.button :submit, "Log in", class:"fw-bold btn-outline-danger btn-outline-opacity-25 w-50 align-self-center" %> <div class="text-end"><%= render "devise/shared/links" %></div>
    </div>
  <% end %>
</div>
