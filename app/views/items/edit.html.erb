<h1 class="text-center">Edit an item</h1>
<div class="d-flex bg-warning bg-opacity-25 p-3 rounded-4 shadow flex-column col-md-6 mx-auto my-5">
<%= simple_form_for(@item) do |f| %>
  <%= f.input :title %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%# <%= f.input :average_rating %>
  <div class="d-flex flex-column text-center form-actions px-4">
      <%= f.button :submit, "Update Item", class:"fw-bold w-50 align-self-center btn-outline-danger btn-outline-opacity-25" %>
    </div>
<% end %>
</div>
<%= link_to "Back to item", item_path(@item) %>
