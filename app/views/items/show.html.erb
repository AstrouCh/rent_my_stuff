<p><%= @item.location %></p>
<p><%= @item.average_rating %></p>

<%= link_to "Edit this item", edit_item_path %>

<%= link_to "Back to all items", items_path %>
<%= button_to "❌",
    item_path(@item), method: :delete %>

<div class="show-page">
  <div class="product-media">
    <div class="product-images">
      <div class="main-image">
        <img id="main-image" src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80">
      </div>
      <div class="side-images">
        <img class="side-image" src="https://images.unsplash.com/photo-1505740106531-4243f3831c78?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80">
        <img class="side-image" src="https://images.unsplash.com/photo-1505751171710-1f6d0ace5a85?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80">
        <img class="side-image" src="https://images.unsplash.com/photo-1505751104546-4b63c93054b1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80">
      </div>
    </div>
    <div class="user-info">
      <div class="user-image">
        <img class="profile-pic" src="https://images.unsplash.com/photo-1603415526960-f7e0328c63b1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80">
      </div>
      <div class="user-desc">
        <h1><%= @item.user.first_name %></h1>
        <p><%= @item.user.description %></p>
      </div>
    </div>
  </div>
  <div class="product-info">
    <div class="product-text">
      <h1> <%= @item.title  %></h1>
      <p><%= @item.description %></p>
    </div>
    <div class="date-location">
      <div class="calender">
        <img class="placeholder" src="https://docs.joomla.org/images/9/9c/DatePicker2.calendar-en.png">
      </div>
      <div class="mapbox">
        <img id="map" src='https://api.mapbox.com/styles/v1/mapbox/streets-v11/static/2.3381,48.8693,10.45,0,0/600x1000?access_token=pk.eyJ1IjoiYnJ1bnN3aWNrY2siLCJhIjoiY2xlaWhxNTAxMDFpeTNxbjRkb282aWF0NiJ9.UuVJl5eb8HTWiIm7yzstnQ'>
      </div>
    </div>
    <div class="rent-button">
      <h1>RENT NOW</h1>
    </div>
  </div>
</div>
